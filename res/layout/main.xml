<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
  <FrameLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="@color/background_white">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/face_wrapper"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:background="@color/background_white"
        android:paddingTop="5dp">
      <com.example.EmotionChat.FaceView
          android:layout_width="125dp"
          android:layout_height="125dp"
          android:id="@+id/face_left"
          android:background="@color/background_white"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="20dp"/>
      <com.example.EmotionChat.FaceView
          android:layout_width="125dp"
          android:layout_height="125dp"
          android:id="@+id/face_right"
          android:background="@color/background_white"
          android:layout_marginLeft="20dp"/>
    </LinearLayout>
  </FrameLayout>
  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_box_wrapper"
        android:layout_alignParentBottom="true">
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="送信"
          android:id="@+id/send_button"
          android:background="@drawable/btn_color_stateful"
          android:layout_alignParentRight="true"
          android:textColor="@color/font_color_white"/>
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/send_button"
          android:id="@+id/editText"/>
    </RelativeLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conversation_list"
        android:layout_above="@id/text_box_wrapper"/>
  </RelativeLayout>
  <SurfaceView
    android:id="@+id/surface"
    android:layout_height="1dp"
    android:layout_width="1dp"/>
</LinearLayout>

