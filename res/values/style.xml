<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="doya_theme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/doya_actionbar_style</item>
        <item name="android:actionButtonStyle">@style/doya_actionbar_button</item>
        <item name="android:textColor">@color/font_color_normal</item>
        <item name="android:editTextStyle">@style/EditTextAppTheme</item>
        <item name="android:actionMenuTextColor">@color/font_color_white</item>
    </style>
    <style name="doya_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/background</item>
        <item name="android:titleTextStyle">@style/doya_actionbar_titletextstyle</item>
    </style>
    <style name="doya_actionbar_titletextstyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/font_color_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="doya_actionbar_button" parent="@android:Widget.ActionButton">
        <item name="android:background">@drawable/btn_color_stateful</item>
    </style>
    <style name="EditTextAppTheme" parent="android:Widget.EditText">
      <item name="android:background">@drawable/edit_text</item>
      <item name="android:textColor">#000000</item>
    </style>
</resources>